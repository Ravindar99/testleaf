package utils;

import java.io.IOException;
import java.util.Arrays;

import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;

public class DataLibrary {

	public Object [][] getData(String excelfilename) throws IOException{
		XSSFWorkbook workbook = new XSSFWorkbook("./Data/"+excelfilename+".xlsx");
		XSSFSheet sheet = workbook.getSheetAt(0);
		int rowcount = sheet.getLastRowNum();
		int clcount = sheet.getRow(0).getLastCellNum();
		System.out.println(rowcount);
		System.out.println(clcount);
		Object [][] data = new Object [rowcount][clcount];
		for (int i = 1; i <= rowcount; i++) {
			for (int j = 0; j < clcount; j++) {
				data[i-1][j]=sheet.getRow(i).getCell(j).getStringCellValue();
				System.out.println(Arrays.deepToString(data));
						}
		} 
		workbook.close();
		return data;
	}
	public static void main(String[] args) throws IOException {
		DataLibrary dl = new DataLibrary();
		dl.getData("Products");
	}
}
